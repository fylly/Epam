    class LinearFunction
    {
        private int p_a;
        private int p_b;

        public LinearFunction()
        {
            a = 0;
            b = 0;
        }

        public LinearFunction(int a_, int b_)
        {
            a = a_;
            b = b_;
        }

        public int a
        {
            get
            {
                return p_a;
            }
            set
            {
                p_a = value;
            }
        }
        
        public int b
        {
            get
            {
                return p_b;
            }
            set
            {
                p_b = value;
            }
        }
        public int get_y(int x_)
        {
            int y = a * x_ + b;
            return y;
        }
    }
