@model MvcSalesSystem.Models.SetRoleModel

@using(Html.BeginForm("SetRole", "Account")){
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Set role form</legend>
        <ol>
            <li>
                @Html.LabelFor(model => model.UserName)
                @Html.EditorFor(model => model.UserName)
            </li>
            <li>
                @Html.LabelFor(model => model.UserRole)
                @Html.DropDownListFor(model=> model.UserRole, (SelectList) ViewBag.Roles )
             </li>
        </ol>
    </fieldset>
    <input type="submit" value="Set role" />    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}